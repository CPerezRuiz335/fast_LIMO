<launch>

    <arg name="multithreaded" default="true" />

    <node pkg="fast_limo" type="fast_limo_multi_exec" name="fast_limo" output="screen" if="$(arg multithreaded)">
        <rosparam file="$(find fast_limo)/config/params.yaml" />
    </node>

    <node pkg="fast_limo" type="fast_limo_exec" name="fast_limo" output="screen" unless="$(arg multithreaded)">
        <rosparam file="$(find fast_limo)/config/params_onethread.yaml" />
    </node>

</launch>